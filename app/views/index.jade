extends layout

block content    
    #nav_container
        #tweet_header
            h1 @Fit_Twit
            p Tracking...
                span.spin
                span.icon-cog
            p.tracking_terms fidcovhack2014, to:fidelity, 'Fidelity Wireless Fund', 'Fidelity ETFs', income, Fidelity Retirement Income, fidelity and efts, nyse, s&p, market watch, squawkbox, wsjlive, pimco, portfolio, funds, insurance, sony
